<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="bpmn_designer.BpmnPropertiesPanel" owl="1">
        <div t-if="props.element and businessObject" class="o_bpmn_properties_panel h-100 d-flex flex-column">

            <div class="o_form_sheet_bg flex-shrink-0">
                <div class="o_form_sheet position-relative">
                    <h5 class="mb-0 text-truncate">
                        <i t-att-class="getElementIcon(props.element.type)"/>
                        <span class="ms-2" t-esc="getElementLabel(props.element.type)"/>
                        <span t-if="businessObject.name" class="ms-2 text-muted fw-normal">- <t t-esc="businessObject.name"/></span>
                    </h5>
                    <small class="text-muted"><t t-esc="businessObject.id"/></small>
                </div>
            </div>

            <div class="o_form_sheet flex-grow-1" style="min-height: 0;">
                <div class="p-3 h-100" style="overflow-y: auto;">

                    <GenericPanel
                        element="props.element"
                        bpmnModeler="props.bpmnModeler"
                    />

                    <TaskPanel
                        t-if="isTask"
                        element="props.element"
                        bpmnModeler="props.bpmnModeler"
                        features="props.features"
                    />

                    <SequenceFlowPanel
                        t-if="isSequenceFlow"
                        element="props.element"
                        bpmnModeler="props.bpmnModeler"
                        targetModel="props.targetModel"
                    />
                </div>
            </div>
        </div>

        <div t-else="" class="p-3">
            <p class="text-muted fst-italic">请选择一个元素以查看其属性。</p>
        </div>
    </t>
</templates>